@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Acme Training</h1>
    <p class="lead">Acme is a leading technology traiing company</p>
    <p><a href="@Url.Action("About")" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>

<div class="row">
    <div class="col-md-4">
        <h2>Departments</h2>
        <p>
            We offer training across a wide variety of technologies including Microsoft, Apple, Java, Oracle, JavaScript, and more.
        </p>
        <p><a class="btn btn-default" href="@Url.Action("Index","Department")">Learn more &raquo;</a></p>
    </div>
    <div class="col-md-4">
        <h2>Courses</h2>
        <p>All of our courses includ up-to-data technical information and hands-on lab exercises.</p>
        <p><a class="btn btn-default" href="@Url.Action("Index","Course")">Learn more &raquo;</a></p>
    </div>
    <div class="col-md-4">
        <h2>Instructors</h2>
        <p>All of our instructors have real-world experience and extensive teaching experience.</p>
        <p><a class="btn btn-default" href="@Url.Action("Index","Instructor")">Learn more &raquo;</a></p>
    </div>
</div>
<br />
<div class="row">

    
    <div class="col-md-12">
        @using (Ajax.BeginForm("Search", "Course", null, new AjaxOptions
        {
            HttpMethod = "GET",
            InsertionMode = InsertionMode.Replace,
            UpdateTargetId = "searchResults",
            LoadingElementId = "loading",
        },
            new { @class = "form-inline" }
        ))
            {
              <input class="form-control" name="q" type="search" data-autocomplete="@Url.Action("QuickSearch","Course")" />
              <button type="submit" class="btn btn-default">Search</button>
            }
</div>
    </div>
<div class="row">
    <div class="col-md-12" id="searchResults">
    </div>
    <div class="col-md-12" id="loading" style="display:none">
        Loading...
    </div>
</div>